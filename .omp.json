{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title": true,
  "console_title_template": "{{ .PWD }}",
  "blocks": 
  [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": 
      [
        {
          "type": "path",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "template": "{{ .Path }} ",
          "foreground": "#00AA00",
          "background": "#003300",
          "properties": 
          {
            "style": "full",
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .HEAD }}{{ if gt .Ahead 0 }} +{{.Ahead}}{{end}}{{ if gt .Behind 0 }} -{{.Behind}}{{end}} ",
          "foreground": "#0099CC",
          "foreground_templates": 
          [
            "{{ if gt .Ahead 0 }}#0099CC{{ end }}",
            "{{ if gt .Behind 0 }}#CC9900{{ end }}"
          ],
          "background": "#002244",
          "background_templates": 
          [
            "{{ if gt .Ahead 0 }}#002244{{ end }}",
            "{{ if gt .Behind 0 }}#442200"
          ],
          "properties": 
          {
            "branch_max_length": 25,
            "fetch_status": true,
            "cherry_pick_icon": "\u2713 ",
            "commit_icon": "\u25b7 ",
            "merge_icon": "\u25f4 ",
            "no_commits_icon": "[no commits]",
            "rebase_icon": "\u2c62 ",
            "tag_icon": "\u25b6 "
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "foreground": "#CCCC00",
          "background": "#333300",
          "template": "{{ if gt .Working.Modified 0 }} *{{ .Working.Modified}}{{ end }}{{ if gt .Working.Added 0 }} +{{ .Working.Added}}{{ end }}{{ if gt .Working.Deleted 0 }} -{{ .Working.Deleted}}{{ end }} ",
          "properties": 
          {
            "fetch_status": true
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "foreground": "#DDAA00",
          "background": "#442200",
          "template": "{{ if gt .Staging.Added 0 }} +{{ .Staging.Added}}{{ end }}{{ if gt .Staging.Deleted 0 }} -{{ .Staging.Deleted}}{{ end }}{{ if gt .Staging.Untracked 0 }} ?{{ .Staging.Untracked}}{{ end }} ",
          "properties": 
          {
            "fetch_status": true
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "template": " {{ .FormattedMs }} ",
          "foreground": "#DDDDDD",
          "properties": 
          {
            "always_enabled": false,
            "style": "round"
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "template": "{{ .Code }}",
          "foreground": "#33CC11",
          "foreground_templates": 
          [
            "{{ if gt .Code 0 }}#CC3333{{ end }}"
          ],
          "properties": 
          {
            "always_enabled": false
          }
        }
      ]
    }
  ]
}