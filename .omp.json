{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{ .PWD }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "folder_separator_icon": "/",
            "style": "full"
          },
          "template": "{{ .Path }} ",
          "foreground": "#00AA00",
          "background": "#003300",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "branch_max_length": 25,
            "cache_duration": "none",
            "cherry_pick_icon": "âœ“ ",
            "commit_icon": "\u25b7 ",
            "fetch_status": true,
            "merge_icon": "\u25f4 ",
            "no_commits_icon": "[no commits]",
            "rebase_icon": "\u2c62 ",
            "tag_icon": "\u25b6 "
          },
          "template": " {{ .HEAD }}{{ if gt .Ahead 0 }} +{{.Ahead}}{{end}}{{ if gt .Behind 0 }} -{{.Behind}}{{end}} ",
          "foreground": "#0099CC",
          "powerline_symbol": "\ue0b0",
          "background": "#002244",
          "type": "git",
          "style": "powerline",
          "foreground_templates": [
            "{{ if gt .Ahead 0 }}#CC0099{{ end }}",
            "{{ if gt .Behind 0 }}#9900CC{{ end }}"
          ],
          "background_templates": [
            "{{ if gt .Ahead 0 }}#440022{{ end }}",
            "{{ if gt .Behind 0 }}#220044{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_status": true
          },
          "template": "{{ if gt .Working.Modified 0 }} *{{ .Working.Modified}}{{ end }}{{ if gt .Working.Added 0 }} +{{ .Working.Added}}{{ end }}{{ if gt .Working.Deleted 0 }} -{{ .Working.Deleted}}{{ end }} ",
          "foreground": "#CCCC00",
          "powerline_symbol": "\ue0b0",
          "background": "#333300",
          "type": "git",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_status": true
          },
          "template": "{{ if gt .Staging.Added 0 }} +{{ .Staging.Added}}{{ end }}{{ if gt .Staging.Deleted 0 }} -{{ .Staging.Deleted}}{{ end }}{{ if gt .Staging.Untracked 0 }} ?{{ .Staging.Untracked}}{{ end }} ",
          "foreground": "#DDAA00",
          "powerline_symbol": "\ue0b0",
          "background": "#442200",
          "type": "git",
          "style": "powerline"
        },
        {
          "properties": {
            "always_enabled": false,
            "cache_duration": "none",
            "style": "round"
          },
          "template": " {{ .FormattedMs }} ",
          "foreground": "#DDDDDD",
          "type": "executiontime",
          "style": "plain"
        },
        {
          "properties": {
            "always_enabled": false,
            "cache_duration": "none"
          },
          "template": " {{ if gt .Code 0 }}\uf00d {{ reason .Code }}{{ else }}\uf42e{{ end }} ",
          "foreground": "#DDDDDD",
          "type": "exit",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#CC3333{{ end }}",
            "{{ if eq .Code 0 }}#33CC33{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "\n",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
